{
  "name": "mini-todo-node",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && node dist/server.js",
    "test:unit": "npm run build && node --test dist/tests/unit/todoModel.test.js",
    "test:e2e": "npm run build && playwright test",
    "test": "npm run test:unit && npm run test:e2e",
    "debug:e2e": "npm run build && cross-env PWDEBUG=1 npx playwright test --headed"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.0.0",
    "cross-env": "^10.1.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
